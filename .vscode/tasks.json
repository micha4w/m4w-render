        {
            "type": "process",
            "label": "m4w - Debug build changed",
            "command": "python3",
            "args": [
                "${workspaceFolder}/.vscode/custom_build/build.py",
                "${workspaceFolder}/src",
                "${workspaceFolder}/.vscode/custom_build/debug",
                "${workspaceFolder}/out-debug",
                "DEBUG"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "clear": true
            },
