{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Build",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.vscode/custom_build/build.py",
            "args": [
                "${workspaceFolder}/src",                           // Source Folder (Recursive)
                "${workspaceFolder}/.vscode/custom_build/debug", // Temp Folder
                "${workspaceFolder}/out-debug",                        // Output File
                "-std=c++2a", "-g", "-lglfw", "-lGLEW", "-lGL", "-D", "DEBUG", "-O3"
            ],
            "console": "integratedTerminal"
        },





        // Debug
        {
            "name": "Debug - Debug OpenGL",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out-debug",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        },

        {
            "name": "Debug - Build changed and Debug OpenGL",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out-debug",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "m4w - Debug build changed",
            "miDebuggerPath": "/usr/bin/gdb"
        },

        {
            "name": "Debug - Build All",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/.vscode/none",
            "preLaunchTask": "m4w - Debug build all",
        },




        // Release
        {
            "name": "Release - Debug OpenGL",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out-release",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
        },

        {
            "name": "Release - Build changed and Debug OpenGL",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "m4w - Release build changed",
            "program": "${workspaceFolder}/out-release",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
        },
        
        {
            "name": "Release - Build All",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/.vscode/none",
            "preLaunchTask": "m4w - Release build all",
        }
    ]
}